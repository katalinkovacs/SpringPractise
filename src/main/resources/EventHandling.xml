<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "hello" class = "spring.eventhandling.Hello">
        <property name = "message" value = "Hello Katikam!"/>
    </bean>

    <bean id = "hello2" class = "spring.eventhandling.Hello">
        <property name = "message" value = "Hello Sebikem!"/>
    </bean>

    <bean id = "cStartEventHandler" class = "spring.eventhandling.CStartEventHandler"/>
    <bean id = "cStopEventHandler" class = "spring.eventhandling.CStopEventHandler"/>

</beans>