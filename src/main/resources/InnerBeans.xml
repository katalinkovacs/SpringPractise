   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

     <!-- Definition for textEditor bean using inner bean -->
    <bean id = "texteditor" class = "spring.innerbeaninjection.TextEditor">
        <property name = "spellChecker">
            <bean id = "spellChecker" class = "spring.innerbeaninjection.SpellChecker"/>
        </property>
    </bean>

